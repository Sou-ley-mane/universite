{% extends 'base.html.twig' %}

{% block title %}Hello AttacheController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper text-center">
    <h1>{{ title }}</h1>
</div>
<table class="table bg-white  w-100 table-striped">
   <tr class="text-center bg-danger border w-100">
      <th class="text-white">Num√©ro</th>
      <th class="text-white">Nom Complet</th>
      <th class="text-white">Adresse mail</th>
      <th class="text-white">Actions</th>

   </tr>
   {% set numero = 0 %}
   {% for att in attaches %}
        <tr class="text-center">
         <td>{% set numero = numero+1 %} {{numero}}</td >
         <td>{{att.nomComplet}}</td>
         <td> {{att.email}}</td>
         <td class="text-center">
          <button class="bg-primary">Archiver</button>
         <a class="text-white" href="{{ path('app_editer',{id:att.id}) }}" ><button class="bg-dark text-white font-weight-bold" >Editer</a>
         <button class="bg-danger text-white " >Supprimer</button> 
      </td>
      </tr>
   {% endfor %}
    
  
</table>
{% endblock %}
